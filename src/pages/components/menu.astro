---
import DocsLayout from '$layouts/DocsLayout.astro';
---
<DocsLayout
  title="Menu (Dropdown)"
  downloadUrl="/components/menu.js"
  alpineName="menu"
>
  <div slot="preview">
    <div x-data="menu" x-bind="menu" class="relative inline-block">
      <button
        x-bind="menuButton"
        class="
          inline-flex
          items-center
          py-2
          pl-6
          pr-5
          font-medium
          tracking-wide
          text-gray-700
          transition
          bg-white
          border border-gray-300
          rounded-lg
          shadow-sm
          outline-none
          disabled:cursor-not-allowed disabled:opacity-60
          active:scale-90
          hover:bg-gray-50
          focus:ring-2
          ring-offset-2 ring-primary-600
        "
      >
        Action
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-4 h-4 ml-3"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path d="M4 9l8 8 8-8" />
        </svg>
      </button>
      <div
        x-bind="menuItems"
        x-transition
        x-cloak
        class="absolute right-0 w-56 mt-2 bg-white rounded-lg shadow-md outline-none"
      >
        <div class="text-gray-700 divide-y-2 divide-gray-100">
          <div class="p-1">
            <a
              x-bind="menuItem"
              href="#details"
              class="
                flex
                items-center
                w-full
                px-3
                py-2
                text-left
                rounded-lg
                outline-none
                focus:bg-primary-600 focus:text-white
              "
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="w-4 h-4 mr-3"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                aria-hidden="true"
              >
                <path
                  d="M21.257 10.962c.474.62.474 1.457 0 2.076C19.764 14.987 16.182 19 12 19c-4.182 0-7.764-4.013-9.257-5.962a1.692 1.692 0 0 1 0-2.076C4.236 9.013 7.818 5 12 5c4.182 0 7.764 4.013 9.257 5.962z"
                />
                <circle cx="12" cy="12" r="3" />
              </svg>
              Details
            </a>
            <a
              x-bind="menuItem"
              href="#edit"
              class="
                flex
                items-center
                w-full
                px-3
                py-2
                text-left
                rounded-lg
                outline-none
                focus:bg-primary-600 focus:text-white
              "
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="w-4 h-4 mr-3"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path
                  d="M4.333 16.048L16.57 3.81a2.56 2.56 0 0 1 3.62 3.619L7.951 19.667a2 2 0 0 1-1.022.547L3 21l.786-3.93a2 2 0 0 1 .547-1.022z"
                />
                <path d="M14.5 6.5l3 3" />
              </svg>
              Edit
            </a>
          </div>
          <div class="p-1">
            <button
              x-bind="menuItem"
              @click="alert('delete')"
              class="
                flex
                items-center
                w-full
                px-3
                py-2
                text-left
                rounded-lg
                outline-none
                focus:bg-primary-600 focus:text-white
              "
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="w-4 h-4 mr-3"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                aria-hidden="true"
              >
                <path
                  d="M4 6h16l-1.58 14.22A2 2 0 0 1 16.432 22H7.568a2 2 0 0 1-1.988-1.78L4 6z"
                />
                <path
                  d="M7.345 3.147A2 2 0 0 1 9.154 2h5.692a2 2 0 0 1 1.81 1.147L18 6H6l1.345-2.853z"
                />
                <path d="M2 6h20" />
                <path d="M10 11v5" />
                <path d="M14 11v5" />
              </svg>
              Delete
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <code data-language="html" slot="import" class="language-html">&lt;script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"&gt;&lt;/script&gt;
&lt;script src="path/to/menu.js"&gt;&lt;/script&gt;</code>
  <code data-language="html" slot="code" class="language-html">&lt;div x-data="menu" x-bind="menu"&gt;
  &lt;button x-bind="menuButton"&gt;Action&lt;/button&gt;
  &lt;div x-bind="menuItems" x-transition x-cloak&gt;
    &lt;a x-bind="menuItem" href="#link"&gt;
      Link
    &lt;/a&gt;
    &lt;button x-bind="menuItem" @click="alert('button')"&gt;
      Button
    &lt;/button&gt;
  &lt;/div&gt;
&lt;/div&gt;</code>
</DocsLayout>